#include <stdio.h>
  
  void swap(int *n1, int *n2) {
    int temp = *n1;
    *n1 = *n2;
    *n2 = temp;
  }
  
  void heapify(int arr[], int n, int i) {
    int max_now = i;
    int left_c = 2 * i + 1;
    int right_c = 2 * i + 2;
  
    if (left_c < n && arr[left_c] < arr[max_now])
      max_now = left_c;
  
    if (right_c < n && arr[right_c] < arr[max_now])
      max_now = right_c;
  
    if (max_now != i) {
      swap(&arr[i], &arr[max_now]);
      heapify(arr, n, max_now);
    }
  }
  
  void heap_sort_min(int arr[], int n) {
    int t= n/2-1;
    for (int i=t ; i>=0; i--)
      heapify(arr, n, i);
  
    for (int i=n-1; i>=0; i--) {
      swap(&arr[0], &arr[i]);
  
      heapify(arr, i, 0);
    }
  }
  
  
  int main() {
    int n,i,arr[100];

    printf("Enter the array elements(end with "-1"): ");
    for(i=0;;i++){
        scanf("%d",&arr[i]);
        if(arr[i]==-1)
        break;
    }
	
    n = i;

    for (int i = 0; i < n; ++i)
      printf("%d ", arr[i]);

    heap_sort_min(arr, n);

    printf("\nSorted array: ");

    for (int i = 0; i < n; ++i)
      printf("%d ", arr[i]);
  
    
  }
